                  <div class="input-group-prepend">
                    <span class="input-group-text">내용</span>
                  </div>
                  <textarea class="form-control" aria-label="내용" 
                    name="content" id="content"  rows="10" cols="20"></textarea>
                </div>
              </div>
              <div class="col-sm-12 py-3">
                <button type="submit" form="update" value="submit" 
                  class="btn btn-danger">Save</button>
              </div>
          </div>
          </form>          
      </main>
    </div>    
